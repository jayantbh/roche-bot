{
  "compilerOptions": {
    "baseUrl": "src",
    "module": "CommonJS",
    "target": "ES5",
    "sourceMap": false,
    "allowJs": false,
    "skipLibCheck": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": false,
    "downlevelIteration": true,
    "lib": ["es2018", "dom"],
    "rootDir": "src",
    "outDir": "dist",
    "isolatedModules": false
  },
  "exclude": ["node_modules"],
  "include": ["src"]
}
